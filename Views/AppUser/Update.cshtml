<div class="center-container" style="position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    top: 150;">

	<div class="container shadow p-3 mb-5 bg-white rounded" style="position: relative;">

    <form asp-controller="AppUser" asp-action="Update" enctype="multipart/form-data">

	  <div class="form-row">
		<div class="form-group col-md-6">
		  <label for="inputEmail4">FirstName</label>
		  <input type="text" class="form-control" placeholder="FirstName" value="@Model.FirstName" asp-for="FirstName">
		</div>
		<div class="form-group col-md-6">
		  <label for="inputPassword4">LastName</label>
		  <input type="text" class="form-control" placeholder="LastName" value="@Model.LastName" asp-for="LastName">
		</div>
	  </div>
	  <div class="form-group">
		<label for="inputAddress2">Password</label>
		<input type="password" class="form-control" placeholder="Password" value="@Model.Password" asp-for="Password">
	  </div>
	  <div class="form-group">
		<label for="inputAddress2">Phone Number</label>
		<input type="text" class="form-control" placeholder="Phone Number" value="@Model.PhoneNumber" asp-for="PhoneNumber">
	  </div>
	  <div class="form-group">
		<label style="margin-right: 7px;"for="inputAddress2">Profile Picture</label>
		<img style="width: 30px; height: 30px; border-radius: 50%;" src="~/profilepics/@Model.ProfilePicture"/>
		<input style="margin-top: 10px;" type="file" class="form-control" placeholder="Profile Picture" asp-for="ProfilePicture" >
	  </div>
	  <div class="form-group">
		<label for="inputAddress2">UserName</label>
		<input type="text" class="form-control" placeholder="UserName" value="@Model.UserName" asp-for="UserName">
	  </div>
	  <div class="form-group">
		<label for="inputAddress2">Email</label>
		<input type="text" class="form-control" placeholder="Email" value="@Model.Email" asp-for="Email">
	  </div>
	  <div style="display: flex; justify-content: center;">
				<button style="width: 100%; font-size: 24px;" type="submit" class="btn btn-primary ">
					Update Profile
				</button>
			</div>
	</form>
</div>
</div>

