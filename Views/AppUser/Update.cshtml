	<nav class="navbar">
		<div class="container">
			<div class="logo">
				<a href="@Url.Action("Index", "Bet")">
					<img src="https://assets-global.website-files.com/61fa07779bcfb50f37014c53/6373c6dbee36d3876068b216_PointsBet2.jpeg"
						 alt="img1" height="40px">
				</a>
			</div>
			@*<div class="searchbar">
			<input type="text"
